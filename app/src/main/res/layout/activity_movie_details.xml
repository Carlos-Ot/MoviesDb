<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:isScrollContainer="true"
    tools:context=".features.details.MovieDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <com.github.florent37.diagonallayout.DiagonalLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detailsDiagonalHeight"
            android:background="@color/colorPrimaryDark"
            app:diagonal_angle="@integer/detailsDiagonalAngle"
            app:diagonal_direction="left"
            app:diagonal_position="bottom">

            <ImageView
                android:id="@+id/backdropImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/backdrop_gradient"
                android:scaleType="centerCrop"
                android:src="@drawable/backdrop_placeholder" />

        </com.github.florent37.diagonallayout.DiagonalLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/detailsBottomPadding"
            android:paddingEnd="@dimen/detailsHorizontalPadding"
            android:paddingStart="@dimen/detailsHorizontalPadding">

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detailsTitleTop"
                android:textColor="@color/detailsTitle"
                android:textSize="@dimen/detailsTitle"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/posterImage"
                android:layout_width="@dimen/detailsPosterWidth"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detailsPosterTop"
                android:src="@drawable/poster_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieTitle" />

            <TextView
                android:id="@+id/detailsOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/detailsOverviewMargin"
                android:layout_marginTop="@dimen/detailsOverviewMargin"
                android:textAlignment="center"
                android:textColor="@color/detailsOverview"
                android:textSize="@dimen/detailsOverviewText"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/posterImage" />

            <TextView
                android:id="@+id/genresList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/detailsGenreMargin"
                android:layout_marginStart="@dimen/detailsGenreMargin"
                android:maxLines="@integer/detailsGenresMaxLines"
                android:textColor="@color/detailsGenre"
                android:textSize="@dimen/detailsGenre"
                app:layout_constraintBottom_toBottomOf="@+id/posterImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/posterImage"
                app:layout_constraintTop_toTopOf="@+id/posterImage"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/releaseDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="@color/detailsReleaseDate"
                android:textSize="@dimen/detailsReleaseDate"
                app:layout_constraintBottom_toBottomOf="@+id/posterImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/posterImage"
                app:layout_constraintTop_toTopOf="@+id/posterImage"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/errorTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/errorTextView"
                android:textSize="@dimen/errorTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

</ScrollView>